<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="salaba.dao.BoardFileDao">

  <resultMap id="BoardFileMap" type="BoardFile">
    <id column="file_no" property="fileNo"/>
    <result column="board_no" property="boardNo"/>
    <result column="ori_file_name" property="oriFileName"/>
    <result column="uuid_file_name" property="uuidFileName"/>
  </resultMap>

  <insert id="add" parameterType="BoardFile">
    insert into board_files (board_no, ori_file_name, uuid_file_name)
    values (#{board_no},#{ori_file_name})
  </insert>

  <insert id="addAll" parameterType="list">
    insert into board_files (board_no, ori_file_name, uuid_file_name)
    values
    <foreach collection="list" item="item" separator=",">
      (#{item.boardNo},#{item.oriFileName},#{item.uuidFildName})
    </foreach>
  </insert>

  <delete id="delete" parameterType="int">
    delete from board_files
    where file_no=#{value}
  </delete>

  <delete id="deleteAll" parameterType="int">
    delete from board_files
    where board_no=#{value}
  </delete>

  <select id="findAllByBoardNo" resultMap="BoardFileMap" parameterType="int">
    select
      file_no,
      board_no,
      ori_file_name,
      uuid_file_name
    from
      board_files
    where
      board_no=#{value}
    order by
      file_no asc
  </select>

  <select id="findByNo" resultMap="BoardFileMap" parameterType="int">
    select
      file_no,
      board_no
    from
      board_files
    where
      file_no=#{value}
  </select>

</mapper>